<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="431dp"
        android:layout_height="66dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wordle Clone"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Wordle Clone" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="226dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        app:constraint_referenced_ids="G1L1,G1L2,G1L3,G1L4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow2"
        android:layout_width="226dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:constraint_referenced_ids="G2L1,G2L2,G2L3,G2L4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="226dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        app:constraint_referenced_ids="G3L1,G3L2,G3L3,G3L4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow2" />

    <TextView
        android:id="@+id/G1L1"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:background="#A1A1A1"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="271dp" />

    <TextView
        android:id="@+id/G1L2"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:background="#A1A1A1"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="146dp" />

    <TextView
        android:id="@+id/G1L3"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:background="#A1A1A1"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="150dp" />

    <TextView
        android:id="@+id/G1L4"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:background="#A1A1A1"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="285dp"
        tools:layout_editor_absoluteY="150dp" />

    <TextView
        android:id="@+id/G3L1"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:background="#A1A1A1"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="197dp" />

    <TextView
        android:id="@+id/G3L2"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:background="#A1A1A1"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="378dp" />

    <TextView
        android:id="@+id/G3L3"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:background="#A1A1A1"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="378dp" />

    <TextView
        android:id="@+id/G3L4"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:background="#A1A1A1"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="270dp"
        tools:layout_editor_absoluteY="378dp" />

    <TextView
        android:id="@+id/G2L1"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:background="#A1A1A1"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="394dp" />

    <TextView
        android:id="@+id/G2L2"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:background="#A1A1A1"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="394dp" />

    <TextView
        android:id="@+id/G2L3"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:background="#A1A1A1"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="277dp"
        tools:layout_editor_absoluteY="394dp" />

    <TextView
        android:id="@+id/G2L4"
        android:layout_width="50dp"
        android:layout_height="56dp"
        android:layout_weight="1"
        android:background="#A1A1A1"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="394dp" />

    <Button
        android:id="@+id/guess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="102dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="140dp"
        android:text="Guess"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reset"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="140dp"
        android:text="Reset"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guess" />

    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="_ _ _ _"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/flow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>